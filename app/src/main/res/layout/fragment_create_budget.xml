<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_bg"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/create_budget_fragment_back_navigation_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_arrow_back"
                />

            <TextView
                android:id="@+id/create_budget_fragment_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/create_budget_fragment_title_tv"
                android:textSize="@dimen/create_budget_fragment_toolbar_title_txsiz"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.391"
                app:layout_constraintStart_toEndOf="@+id/create_budget_fragment_back_navigation_iv"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.createbudget.presentation.CreateBudgetFragment"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/create_budget_fragment_label_title_tv"
        android:layout_width="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/create_budget_fragment_label_title" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/create_budget_fragment_title_til"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:errorEnabled="true"
        app:hintEnabled="false"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/create_budget_fragment_title_tiedt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/create_budget_fragment_hint_title"
            android:inputType="text"
            android:lines="1"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/create_budget_fragment_title_amount_tv"
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/create_budget_fragment_label_amount"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/create_budget_fragment_amount_til"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:errorEnabled="true"
        app:hintEnabled="false"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/create_budget_fragment_amount_tiedt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/create_budget_fragment_hint_amount"
            android:inputType="numberDecimal"
            android:lines="1"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/create_budget_fragment_title_budget_period_tv"
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/create_budget_fragment_label_buget_period"
        />

    <Spinner
        android:id="@+id/create_budget_fragment_buget_period_spinner"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/spinner_bg"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        >
        <Spinner
            android:id="@+id/create_budget_fragment_budget_period_annual_year_spinner"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:entries="@array/choose_year"
            android:visibility="gone"
            android:background="@drawable/spinner_bg"
            />
        <Spinner
            android:id="@+id/create_budget_fragment_budget_period_monthly_year_spinner"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:entries="@array/choose_year"
            android:visibility="gone"
            android:background="@drawable/spinner_bg"
            />
        <Spinner
            android:id="@+id/create_budget_fragment_budget_period_monthly_month_spinner"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:entries="@array/budget_period_month"
            android:visibility="gone"
            android:background="@drawable/spinner_bg"
            />

        <TextView
            android:id="@+id/create_budget_fragment_budget_period_weekly_start_date_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:fontFamily="@font/roboto_light"
            android:background="@drawable/budget_period_bg"
            android:drawableEnd="@drawable/ic_pick_date"
            android:visibility="gone"
            android:hint="@string/create_budget_fragment_budget_period_weekly_start_date"
            />
        <EditText
            android:id="@+id/create_budget_fragment_budget_period_weekly_duration_edittext"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginTop="48dp"
            android:inputType="number"
            android:fontFamily="@font/roboto_light"
            android:background="@drawable/edit_field_bg"
            android:visibility="gone"
            android:hint="@string/create_budget_fragment_budget_period_weekly_duration"
            />
        <TextView
            android:id="@+id/create_budget_fragment_budget_period_daily_start_date_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:fontFamily="@font/roboto_light"
            android:background="@drawable/budget_period_bg"
            android:drawableEnd="@drawable/ic_pick_date"
            android:visibility="gone"
            android:hint="@string/create_budget_fragment_budget_period_weekly_start_date"
            />
        <TextView
            android:id="@+id/create_budget_fragment_budget_period_custom_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:fontFamily="@font/roboto_light"
            android:background="@drawable/budget_period_bg"
            android:drawableEnd="@drawable/ic_pick_date"
            android:visibility="gone"
            android:hint="@string/create_budget_fragment_budget_period_custom_selection"
            />
    </FrameLayout>
    <TextView
        android:id="@+id/create_budget_fragment_title_description_tv"
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/create_budget_fragment_label_description"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/create_budget_fragment_description_til"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:errorEnabled="true"
        app:hintEnabled="false"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/create_budget_fragment_description_tiedt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/create_budget_fragment_hint_add_description_here"
            android:inputType="numberDecimal"
            android:lines="1"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/create_budget_fragment_done_button_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/login_button_bg"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/create_budget_fragment_done_button"
        android:textAllCaps="false"
        android:textColor="@color/white" />

</androidx.appcompat.widget.LinearLayoutCompat>
</androidx.core.widget.NestedScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>